/* pages/publish/publish.wxss */
page{
  background-color: #f4f4f4;
}
.title{
  display: flex;
  justify-content:space-between ;
  align-items: center;
  padding: 10vh 4vw 3vh;
}
.photograph{
  display: flex;
  justify-content:center;
  align-items: center;
  border-top: 1px solid hsl(221, 88%, 73%) ;
  border-bottom: 1px solid hsl(221, 88%, 73%)  ;
  border-radius: 20px;
}
.takePhoto{
  margin-top:1vh ;
  height:26vh;
  width: 20vw;
  border:3px dashed rgb(247, 201, 163);
  text-align: center;
  border-radius: 50%;
  color: rgb(252, 226, 206);
  font-size: 16vh;
}
.photograph text{
  display: block;
  text-align: center;
  justify-content: center;
  color: rgb(247, 201, 163);
}
.icon-xiangji:before {
  content: "\e6c4";
}
.finish{
  width:80vw ;
  height: 6vh;
  text-align: center;
  color:  rgb(227, 232, 245);
  background-color: rgb(111, 154, 255);
  border-top:1px solid #ddd9d9;
}
.finish text{
  display: block;
  margin-top: 12rpx;
}
scroll-view {
  border:1px solid #e0dddd;
}
.imglist{
  display: flex;
  justify-content: flex-start;
  align-items:flex-start;
  flex-wrap: wrap;
  width: auto;
  height:28vh;
}
.loadingImg{
  margin-left: 3vh;
  margin-bottom:1vh ;
  margin-top:1vh ;
  position: relative;
}
image{
  width:200rpx;
  height: 200rpx;
  display: none;
}
.imageshow{
  display: block;
}
.Imgtext {
  position: absolute;
  color: #fc2020;
}
.addimg{
  width: 200rpx;
  height: 200rpx;
  background-color: #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.3;
}
.addtext{
  color: #fffefe;
  align-items: center;
  display: block;
}
.icon-guanbi:before {
  content: "\e611";
  font-size: 35rpx;
}
/* 文本域 */
textarea {
  width: 100%;
  border-radius: 10rpx;
  height:12vh;
  box-shadow: 5px 5px 5px 5px #fcecd5;
}

.textarea-wrp {
  padding: 0 25rpx;
  height: 12vh;
  background-color: #fff;
}

.page-section{
  width: 100%;
  height: 12vh;
  margin-bottom: 60rpx;
}

.page-section:last-child{
  margin-bottom: 0;
}

.page-section-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 10rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
/* option */
/* label */
.option{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  width: 100vw;
  background-color: #fff;
}
.option > view{
  font-size: large;
  color: #858383;
  width: 100%;
  height: 6vh;
  border-top:1rpx solid #dfdcdc;
  padding-top: 2vh;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.option view text{
  padding: 2vw;
}
swiper-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  color: #858383;
}
.textcolor{
  background-color:rgb(248, 197, 87) ;
  color: #fff;
  font-size: 25rpx;
  margin-right:10px ;
}


.no{
  display: none;
}
/* 发布 */
.finish{
  width: 100vw;
  height: 6vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #f5b237;
  margin-top: 2vh;
}
.finish button{
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background-color: #f5b237;
  font-size:30rpx;
}
button{
  margin: 0;
  padding: 0;
}





