/* pages/main/main.wxss */
page{
  position: relative;
  display: grid;
  width: 100vw;
  height: 100vh;
  grid-template-rows: 16vh 1fr 10vh;
}
.header{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size:2em;
  color:white;
}
.main{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title{
  display: flex;
  justify-content:space-between ;
  align-items: center;
  margin-top: 8vh;
  margin-left:4vw;
  margin-right: 4vw;
}


/* taby以下*/
.container {
  padding: 0;
}
.swiper-box {
  width: 100%;
}
.orderlength{width:100%}
.order-itembox {
  width: 100%;
}

.swiper-tab {
  width: 100%;
  display: -webkit-flex;
  display: flex;
  background: #fff;
}

.swiper-tab .swiper-tab-item {
  -webkit-box-flex: 1;
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
   position:relative;
}

.swiper-tab  .active {
  color: orange;
}
.swiper-tab  .active::after{
  display:block;
  content:'';
  width:100%;
  height:6rpx;
  background:orange;
  position:absolute;
  bottom:0;
}
/* 内容 */
.content{
  margin: 2vw;
  width: 46vw;
}
.order-item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
}
/* 图片 */
image{
  width: 46vw;
  height: 380rpx;
}
.text-margin{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.head-portrait{
  width: 60rpx;
  height: 60rpx;
  margin: 1vh;
  border-radius:50% ;
}
.nickname{
  position: relative;
  bottom: 25rpx;
}
.logo-margin{
  border-bottom: 2px solid rgb(168, 209, 248);
  border-radius: 10%;
}
/* 小红点 */
.tip {
  position: relative;
  top: 4rpx;
  right: 16rpx;
  min-width: 25rpx;
  height: 25rpx;
  background: rgb(252, 204, 160);
  box-sizing: border-box;
  color: white;
  font-size: 10rpx;
  text-align: center;
  line-height: 20rpx;
  padding: 0 5rpx;
  border-radius: 10rpx;
  display: inline-block;
  font-size: 15rpx;
}
/* 选项 */
.options{
  position: absolute;
  display: fixed;
  width: 60vw;
  height: 120vh;
  flex-wrap: wrap;
}
.optionsbg{
  position: absolute;
  margin: 0;
  padding: 0;
  width: 60vw;
  display: fixed;
}
.optionsbg image{
  margin: 0;
  padding: 0;
  width: 60vw;
  filter:blur(2px);
}
.optionhead{
  height:100rpx;
  width:100rpx;
  border-radius: 50%;
  overflow:hidden;
  margin: 20rpx;
}
.headposition{
  width: 60vw;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: flex-start;
  color: rgb(206, 205, 205);
}
.optionnickname {
  padding-top:45rpx;
}
.option{
  width: 60vw;
  background-color: orange;
}
/* 字体 */

.iconfont {
  margin: 8rpx;
  font-size: 40rpx;
  color:rgba(139, 131, 131, 0.89);
}
.yanjingcolor {
  color: rgb(71, 99, 253);
}
.dianzancolor{
  color: rgb(245, 47, 47);
}



  
  