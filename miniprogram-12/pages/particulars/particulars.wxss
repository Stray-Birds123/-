/* 评论 */
.model {
  position: fixed;
  width: 100vw;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
  animation: show 1000ms ease-in-out infinite,
  }
  
  .input-box {
  position: absolute;
  background-color: #f8f8f8;
  padding: 30rpx;
  padding-bottom: 130rpx;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 101;
  }
  
  .textarea {
  background-color: #fff;
  width: 100%;
  padding: 5rpx;
  height: 3.3em;
  font-size: 15px;
  position: static;
  }
  
  .send {
  font-size: 10px;
  margin-top: 5rpx;
  color: #eba74f;
  float: right;
  position: static;
  text-align: center;
  }
  
  .invisible_model{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0;
  bottom: 0;
  }
  @keyframes show{
    0%{
      height: 0;
    }
    100%{
      height: 100vh;
    }
  }
