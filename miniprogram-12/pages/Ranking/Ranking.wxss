/* pages/Ranking/Ranking.wxss */
.title{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10vh 4vw 3vh;
  color:orange ;
}
.Ranks{
  width: 100%;
  height: 22vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.Rankimg{
  display: block;
  position: relative;
  top: -50rpx;
  margin: 25rpx;
}
.text{
  border: 1px solid rgb(220, 219, 219);
  width: 90vw;
  height: 14vh;
  display: flex;
  justify-content: end;

}
.item{
  border-radius: 50% ;
  width: 50rpx;
  height: 50rpx;
  background-color:orange;
  color: #fff;
  font-size: 40rpx;
  text-align: center;
  position: relative;
  left: -25rpx;
  top: 4.5vh;
}
.describe{
  display: flex;
  justify-content:flex-end;
  align-items: center;
  width: 42vw;
  font-size: 25rpx;
  flex-wrap: wrap;
  height: 100%;
}
.label{
  background-color: orange;
  margin: 10rpx;
  color: #fff;
  border-radius:10rpx ;
}
