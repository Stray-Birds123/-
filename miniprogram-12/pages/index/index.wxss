page{
  width: 100vw;
  height: 100vh;
  background: #0c1e30;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap:wrap;
}
image{
  width: 100%;
  height: 100%;
}
.tc{
  position: fixed;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  border:1px solid #2c3e50;
}
.text{
  height:auto;
  width:100vw;
  margin-top:20vh ;
  font-size: medium;
  color: white;
  font-family: serif;
  text-align: center;
  align-self: center;
  flex-direction:row;
}

button::after{ 
	border: none; 
}

button {
    width: 100vw;
    border-radius: 30px;
    background: #673bb7;
    color: white;
}

